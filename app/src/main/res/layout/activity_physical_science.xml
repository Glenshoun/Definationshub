<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PhysicalScienceActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10sp"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="?actionBarSize">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_baseline_arrow_back_24"
               android:padding="15dp"
               android:layout_centerVertical="true"/>

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_baseline_search_24"
               android:padding="15dp"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Physical Science"
           android:layout_gravity="center"
           android:textAlignment="center"
           android:textSize="40dp"
           android:textAllCaps="true"
           android:padding="10sp"
           android:textFontWeight="@integer/material_motion_duration_long_1"
           android:textColor="@color/orange"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def1"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Acceleration"
               android:textStyle="bold"
               android:textAlignment="center"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:text="The rate of change of velocity."
                   android:layout_below="@+id/def1"
                   android:layout_centerHorizontal="true"
                   android:padding="5dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def2"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Free-body diagrams"
               android:textStyle="bold"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="This is a diagram that shows the relative magnitudes and directions of forces acting
on a body/particle that has been isolated from its surroundings."
               android:layout_below="@+id/def2"
               android:layout_centerHorizontal="true"
               android:padding="5dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def3"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Kinetic frictional force
(fk)
"
               android:textStyle="bold"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="The force acting parallel to a surface and opposes the motion of a MOVING object
relative to the surface."
               android:layout_below="@+id/def3"
               android:layout_centerHorizontal="true"
               android:padding="5dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def4"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Mass"
               android:textStyle="bold"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="The amount of matter in a body measured in kilogram (kg)"
               android:layout_below="@+id/def4"
               android:layout_centerHorizontal="true"
               android:padding="5dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def5"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Newton's first law of
motion"
               android:textStyle="bold"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="A body will remain in its state of rest or motion at constant velocity unless a non-zero
resultant/net force acts on it."
               android:layout_below="@+id/def5"
               android:layout_centerHorizontal="true"
               android:padding="5dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def6"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Inertia"
               android:textStyle="bold"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="The resistance of a body to a change in its state of rest or uniform motion in a straight
line.
Mass is a measure of an objectâ€™s inertia."
               android:layout_below="@+id/def6"
               android:layout_centerHorizontal="true"
               android:padding="5dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@color/orange"
           android:textAlignment="center"
           android:layout_margin="10dp">

           <TextView
               android:id="@+id/def7"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:layout_centerHorizontal="true"
               android:text="Normal force"
               android:textStyle="bold"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="The force or the component of a force which a surface exerts on an object with which
it is in contact, and which is perpendicular to the surface"
               android:layout_below="@+id/def7"
               android:layout_centerHorizontal="true"
               android:padding="5dp"/>

       </RelativeLayout>




   </LinearLayout>



</ScrollView>